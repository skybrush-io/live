{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "paths": { "~/*": ["*"] },
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  }
}
